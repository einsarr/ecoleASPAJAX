
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">
    <div class="card-header">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#matiereModal" onclick="clearTextBoxMatiere();"><span class="fas fa-plus-circle"></span>Nouveau</button><br /><br />
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>N°</th>
                    <th>Libelle</th>
                    <th>Coefficient</th>
                    <th>Actif</th>
                    <th>Option</th>
                </tr>
            </thead>
            <tbody class="tbodyMatieres"></tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->
<div class="modal fade" id="matiereModal" tabindex="-1" role="dialog" arialabelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Nouvelle matière</h4>
                <button type="button" class="close" data-dismiss="modal">×</button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <input type="hidden" class="form-control" id="Id"
                               placeholder="Id" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <label for="Libelle">Libelle</label>
                        <input type="text" class="form-control" id="Libelle"
                               placeholder="Libelle" />
                    </div>
                    <div class="form-group">
                        <label for="Coefficient">Coefficient</label>
                        <input type="text" class="form-control" id="Coefficient"
                               placeholder="Coefficient" />
                    </div>
                    <div class="form-group">
                        <label for="Actif">Actif</label>
                        <input type="text" class="form-control" id="Etat"
                               placeholder="Actif" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAdd"
                        onclick="return AddMatiere();">
                    Add
                </button>
                <button type="button" class="btn btn-warning" id="btnUpdate"
                        style="display:none;" onclick="UpdateMatiere();">
                    Update
                </button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>
